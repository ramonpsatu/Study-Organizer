<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_minus_1"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_header"
            android:elevation="4dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_header_2"
            android:backgroundTint="@color/colorPrimaryVariant_default"
            android:elevation="4dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_date_in_header" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_bg_description_layout"
            android:backgroundTint="@color/colorPrimaryVariant_default"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/ic_small_size_logo_app_40x40"
            android:backgroundTint="@color/white_minus_1"
            android:elevation="5dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView_date_in_header"
            style="@style/Opens_Sans_Bold_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:gravity="center"
            android:text="@string/text_topic_registration_date"
            android:textColor="@color/white_minus_1"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView" />

        <TextView
            android:id="@+id/textView_user_name"
            style="@style/Opens_Sans_Bold_H4_16"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:elevation="4dp"
            android:gravity="start"
            android:maxLength="24"
            android:maxLines="1"
            android:text="@string/text_hello_username"
            android:textColor="@color/white_minus_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView_amount_questions"
            style="@style/Opens_Sans_Bold_H5_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/text_amount_of_questions"
            android:textColor="@color/white_minus_1"
            app:layout_constraintBottom_toTopOf="@+id/textView_amount_performance"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView_amount_performance"
            style="@style/Opens_Sans_Bold_H5_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/text_total_performance"
            android:textColor="@color/white_minus_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/textView_amount_questions" />


        <TextView
            android:id="@+id/textView_amount_questions_value"
            style="@style/Opens_Sans_Bold_H5_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_bg_description_layout"
            android:gravity="center"
            android:text="@string/text_initial_score"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_amount_questions"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/textView_amount_questions"
            app:layout_constraintTop_toTopOf="@+id/textView_amount_questions" />

        <TextView
            android:id="@+id/textView_performance_value"
            style="@style/Opens_Sans_Bold_H5_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_bg_description_layout"
            android:gravity="center"
            android:text="@string/text_initial_score"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_amount_performance"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/textView_amount_questions"
            app:layout_constraintTop_toTopOf="@+id/textView_amount_performance" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView_revisions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            tools:listitem="@layout/revision_content_layout" />

        <TextView
            android:id="@+id/textView_revisions"
            style="@style/Opens_Sans_Regular_H3_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="text"
            android:text="@string/word_revisions"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            tools:ignore="TextViewEdits,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/word_today"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_move_to_today"
            app:layout_constraintStart_toStartOf="@+id/textView_move_to_today"
            app:layout_constraintTop_toTopOf="@+id/textView_move_to_today"
            tools:ignore="TextContrastCheck,VisualLintOverlap" />

        <ImageView
            android:id="@+id/textView_move_to_today"
            style="@style/Opens_Sans_Regular_H5_14"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:padding="12dp"
            android:src="@drawable/ic_button_today"
            app:layout_constraintBottom_toBottomOf="@+id/textView_revisions"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
           />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/floatingActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/ic_input_add"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <View
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorSecondary_default"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_revisions"
            tools:ignore="ImageContrastCheck" />

        <View
            android:id="@+id/imageView10"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorSecondary_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_right_month"
          />

        <TextView
            android:id="@+id/textView_lef_month"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/arrow_left"
            android:backgroundTint="@color/colorSecondary_plus_1"
            app:layout_constraintBottom_toBottomOf="@+id/textView_month"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/textView_month" />

        <TextView
            android:id="@+id/textView_right_month"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/arrow_right"
            android:backgroundTint="@color/colorSecondary_plus_1"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView_month"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_right_month"
            app:layout_constraintEnd_toStartOf="@+id/textView_right_month"
            app:layout_constraintStart_toEndOf="@+id/textView_lef_month"
            app:layout_constraintTop_toTopOf="@+id/textView_right_month"
            tools:ignore="HardcodedText" />

        <include
            android:id="@+id/revision_schedule"
            layout="@layout/revision_schedule_dialog_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/recycleView_revisions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/textView_revision_list_size"
            style="@style/Opens_Sans_Regular_H5_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/text_initial_score"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView_revisions"
            app:layout_constraintTop_toTopOf="@+id/textView_revisions" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>