        app:layout_constraintBottom_toBottomOf="@+id/textView_sunday_letter"
        app:layout_constraintEnd_toStartOf="@+id/textView_sunday_letter"
        app:layout_constraintStart_toEndOf="@+id/textView_friday_letter"
        app:layout_constraintTop_toTopOf="@+id/textView_sunday_letter"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/textView_sunday_letter"
        style="@style/Opens_Sans_Bold_H4_16"
        android:layout_width="@dimen/width_tbs_calendar_screen"
        android:layout_height="70dp"
        android:layout_marginEnd="@dimen/margin_end_tbn_S_calendar_screen"
        android:layout_marginBottom="8dp"
        android:gravity="top|center"
        android:text="@string/firstLetter_day_sunday"
