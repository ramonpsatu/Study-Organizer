        app:layout_constraintEnd_toStartOf="@+id/textView_tuesday_letter"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/view0"
        app:layout_constraintTop_toTopOf="@+id/textView_tuesday_letter"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/textView_tuesday_letter"
