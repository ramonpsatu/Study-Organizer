        android:layout_height="70dp"
        android:gravity="top|center"
        android:text="@string/firstLetter_day_tuesday"
        android:textColor="@color/black_minus_2"
        app:layout_constraintBottom_toBottomOf="@+id/textView_wednesday_letter"
        app:layout_constraintEnd_toStartOf="@+id/textView_wednesday_letter"
