<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="173dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="4dp"
    tools:ignore="TextSizeCheck">


    <ImageView
        android:id="@+id/imageView_ic_background_task_book"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_background_field_stroke_black"
        android:contentDescription="@string/contentDescription_background_subject_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_touchable_background"
        android:layout_width="88dp"
        android:layout_height="152dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_bg_description_layout"
        android:backgroundTint="@color/black_minus_2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ic_background_task_book"
        app:layout_constraintStart_toStartOf="@+id/imageView_ic_background_task_book"
        app:layout_constraintTop_toTopOf="@+id/imageView_ic_background_task_book" />

    <TextView
        android:id="@+id/editText_title"
        style="@style/Opens_Sans_Regular_H4_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title_topic_conte_layout"
        android:layout_marginEnd="16dp"
        android:breakStrategy="high_quality"
        android:clickable="false"
        android:gravity="start"
        android:maxLength="75"
        android:maxLines="4"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/text_topic_title"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_title_word"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_word" />

    <TextView
        android:id="@+id/textView_error"
        style="@style/Opens_Sans_Bold_H4_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:text="@string/text_error"
        android:textColor="#B71C1C"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView_error_number"
        app:layout_constraintEnd_toEndOf="@+id/textView_error_number"
        app:layout_constraintStart_toStartOf="@+id/textView_error_number"
        tools:ignore="TextContrastCheck,VisualLintOverlap" />

    <ImageView
        android:id="@+id/textView_match"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/contentDescription_text_match"
        android:src="@drawable/ic_match"
        app:layout_constraintBottom_toTopOf="@+id/textView_match_number"
        app:layout_constraintEnd_toEndOf="@+id/textView_match_number"
        app:layout_constraintStart_toStartOf="@+id/textView_match_number"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView_error_number"
        style="@style/Opens_Sans_Regular_H4_16"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:background="@drawable/ic_background_texts_fields"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:maxWidth="32dp"
        android:minWidth="24dp"
        android:text="@string/text_error_score"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView_match_number"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="@+id/view_touchable_background"
        app:layout_constraintTop_toBottomOf="@+id/textView_match"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <TextView
        android:id="@+id/textView_match_number"
        style="@style/Opens_Sans_Regular_H4_16"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_background_texts_fields"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:maxWidth="32dp"
        android:minWidth="24dp"
        android:text="@string/text_error_score"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/view_touchable_background"
        app:layout_constraintTop_toBottomOf="@+id/textView_questions_number"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <TextView
        android:id="@+id/textView_performance_number"
        style="@style/Opens_Sans_Regular_H4_16"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:background="@drawable/ic_bg_small_fields"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:maxLength="6"
        android:text="@string/text_performance_number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView_performance"
        app:layout_constraintStart_toStartOf="@+id/textView_performance"
        app:layout_constraintTop_toBottomOf="@+id/textView_performance"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <ImageView
        android:id="@+id/ic_topic_checkbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="@dimen/margin_bottom_checkbox_topic_conte_layout"
        android:contentDescription="@string/contentDescription_show_isCompleted_checkbox"
        android:padding="4dp"
        android:src="@drawable/ic_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/imageView_ic_background_task_book"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/ic_edit_topic"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/contentDescription_edit_button"
        android:padding="4dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ic_background_task_book"
        app:layout_constraintStart_toEndOf="@+id/view_touchable_background" />

    <TextView
        android:id="@+id/textView_performance"
        style="@style/Opens_Sans_Bold_S_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/text_performance"
        android:textColor="@color/white_minus_2"
        app:layout_constraintEnd_toEndOf="@+id/view_touchable_background"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/view_touchable_background"
        app:layout_constraintTop_toTopOf="@+id/view_touchable_background"
        app:layout_goneMarginTop="8dp"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/textView_questions_of_day"
        style="@style/Opens_Sans_Bold_S_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/text_questions_word"
        android:textColor="@color/white_minus_2"
        app:layout_constraintEnd_toEndOf="@+id/textView_performance"
        app:layout_constraintStart_toStartOf="@+id/textView_performance"
        app:layout_constraintTop_toBottomOf="@+id/textView_performance_number"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/textView_questions_number"
        style="@style/Opens_Sans_Regular_H4_16"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_bg_small_fields"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/text_error_score"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView_questions_of_day"
        app:layout_constraintStart_toStartOf="@+id/textView_questions_of_day"
        app:layout_constraintTop_toBottomOf="@+id/textView_questions_of_day"
        tools:ignore="VisualLintOverlap,TextSizeCheck" />

    <View
        android:id="@+id/view_touchable_performance"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_questions_of_day"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_title_word"
        style="@style/Opens_Sans_Bold_H4_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_new_subject_title"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/view_touchable_background"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>