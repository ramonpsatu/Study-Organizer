<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_minus_1"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".form.SubjectFormFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_header"
            android:elevation="4dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/contentDescription_button_back"
            android:elevation="4dp"
            android:padding="10dp"
            android:src="@drawable/ic_button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_top_view1_subject_form_screen"
            android:layout_marginEnd="16dp"
            android:background="#91A69F9D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_top_view2_subject_form_screen"
            android:layout_marginEnd="16dp"
            android:background="#91A69F9D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_subject_saturday" />

        <TextView
            android:id="@+id/textView_subject_word_exhibition"
            style="@style/Opens_Sans_Bold_H3_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:fontFamily="@font/arimo_italic"
            android:text="@string/text_new_subject_words"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView_title_word_exhibition"
            style="@style/Opens_Sans_Bold_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/margin_top_title_subject_form_screen"
            android:text="@string/text_new_subject_title"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView_frequency_word_exhibition"
            style="@style/Opens_Sans_Bold_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_view1_subject_form_screen"
            android:text="@string/text_new_category_frequency"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView_title_word_exhibition"
            app:layout_constraintTop_toBottomOf="@+id/view1" />


        <TextView
            android:id="@+id/textView_topic_date"
            style="@style/Opens_Sans_Bold_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_view1_subject_form_screen"
            android:text="@string/text_new_category_bgColor"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView_frequency_word_exhibition"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/textView_subject_monday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="@string/text_day_monday_form"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_subject_tuesday"
            app:layout_constraintEnd_toStartOf="@+id/textView_subject_tuesday"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_subject_tuesday" />

        <TextView
            android:id="@+id/textView_subject_tuesday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="@string/text_day_tuesday_form"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_subject_wednesday"
            app:layout_constraintEnd_toStartOf="@+id/textView_subject_wednesday"
            app:layout_constraintStart_toEndOf="@+id/textView_subject_monday"
            app:layout_constraintTop_toTopOf="@+id/textView_subject_wednesday" />

        <TextView
            android:id="@+id/textView_subject_wednesday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="@string/text_day_wednesday_form"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_subject_thursday"
            app:layout_constraintEnd_toStartOf="@+id/textView_subject_thursday"
            app:layout_constraintStart_toEndOf="@+id/textView_subject_tuesday"
            app:layout_constraintTop_toTopOf="@+id/textView_subject_thursday" />


        <TextView
            android:id="@+id/textView_subject_thursday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="@string/text_day_thursday_form"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_subject_wednesday"
            app:layout_constraintTop_toBottomOf="@+id/textView_frequency_word_exhibition" />

        <TextView
            android:id="@+id/textView_subject_friday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/arimo"
            android:gravity="center"
            android:text="@string/text_day_friday_form"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_subject_saturday"
            app:layout_constraintEnd_toStartOf="@+id/textView_subject_saturday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_subject_saturday" />

        <TextView
            android:id="@+id/textView_subject_saturday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="@string/text_day_saturday_form"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView_subject_sunday"
            app:layout_constraintEnd_toStartOf="@+id/textView_subject_sunday"
            app:layout_constraintStart_toEndOf="@+id/textView_subject_friday"
            app:layout_constraintTop_toTopOf="@+id/textView_subject_sunday" />

        <TextView
            android:id="@+id/textView_subject_sunday"
            style="@style/Opens_Sans_Regular_H4_16"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_background_75alpha"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="@string/text_day_sunday_form"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_subject_saturday"
            app:layout_constraintTop_toBottomOf="@+id/textView_subject_thursday" />

        <View
            android:id="@+id/view_color_lightPink"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/light_pink"
            app:layout_constraintBottom_toBottomOf="@+id/view_color_creamOrange"
            app:layout_constraintEnd_toStartOf="@+id/view_color_creamOrange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_color_creamOrange" />

        <View
            android:id="@+id/view_color_creamOrange"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/cream_orange"
            app:layout_constraintBottom_toBottomOf="@+id/view_color_redPink"
            app:layout_constraintEnd_toStartOf="@+id/view_color_redPink"
            app:layout_constraintStart_toEndOf="@+id/view_color_lightPink"
            app:layout_constraintTop_toTopOf="@+id/view_color_redPink" />

        <View
            android:id="@+id/view_color_redPink"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/red_pink"
            app:layout_constraintBottom_toBottomOf="@+id/view_color_lightPurple"
            app:layout_constraintEnd_toStartOf="@+id/view_color_lightPurple"
            app:layout_constraintStart_toEndOf="@+id/view_color_creamOrange"
            app:layout_constraintTop_toTopOf="@+id/view_color_lightPurple" />

        <View
            android:id="@+id/view13"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/marginTop_to_button"
            android:clickable="false"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <View
            android:id="@+id/view_color_lightPurple"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/light_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_color_redPink"
            app:layout_constraintTop_toBottomOf="@+id/textView_topic_date" />

        <View
            android:id="@+id/view_color_lightYellow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/light_yellow"
            app:layout_constraintEnd_toStartOf="@+id/view_color_light_gray"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_color_lightGreen"
            app:layout_constraintTop_toBottomOf="@+id/view_color_lightPurple" />

        <View
            android:id="@+id/view_color_lightGreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/light_green"
            app:layout_constraintBottom_toBottomOf="@+id/view_color_lightYellow"
            app:layout_constraintEnd_toStartOf="@+id/view_color_lightYellow"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_color_lightBlue"
            app:layout_constraintTop_toTopOf="@+id/view_color_lightYellow" />

        <View
            android:id="@+id/view_color_lightBlue"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="@+id/view_color_lightGreen"
            app:layout_constraintEnd_toStartOf="@+id/view_color_lightGreen"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_color_lightGreen" />


        <View
            android:id="@+id/view_color_light_gray"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:background="@drawable/ic_background_colors"
            android:backgroundTint="@color/bgColor_colorView_light_gray"
            app:layout_constraintBottom_toBottomOf="@+id/view_color_lightYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_color_lightYellow"
            app:layout_constraintTop_toTopOf="@+id/view_color_lightYellow" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_new_subject_save"
            style="@style/buttons_tertiary_minus_1"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:text="@string/text_to_add"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:counterEnabled="true"
            app:counterMaxLength="75"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintStart_toStartOf="@+id/textView_title_word_exhibition"
            app:layout_constraintTop_toBottomOf="@+id/textView_title_word_exhibition">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_inputLayout_title"
                style="@style/Opens_Sans_Regular_H4_16"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:background="@drawable/ic_background_field_userdata"
                android:gravity="start|center"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="75"
                android:padding="4dp"
                android:scrollbars="horizontal"
                android:scrollHorizontally="true"
                tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_all_days"
            android:theme="@style/buttons_tertiary_minus_1"
            android:layout_width="72dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_all_word"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_frequency_word_exhibition"
            tools:ignore="TouchTargetSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
