<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_minus_1"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_logo_app"
            android:layout_width="@dimen/width_logo_app_login_screen"
            android:layout_height="@dimen/height_logo_app_login_screen"
            android:layout_marginTop="@dimen/margin_top_logo_app_login_screen"
            android:contentDescription="@string/contentDescription_logo_image"
            android:focusable="true"
            android:src="@drawable/ic_logo_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_letter_s"
            app:layout_constraintEnd_toStartOf="@+id/textView_create_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_create_account" />

        <ImageView
            android:id="@+id/imageView_T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_letter_o"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/textView_create_account"
            app:layout_constraintTop_toBottomOf="@+id/image_button_login" />

        <ImageView
            android:id="@+id/imageView_right_per100"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_top_per100_login_screen"
            android:importantForAccessibility="no"
            android:src="@drawable/detail_login_screen_right"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_logo_app"
            app:layout_constraintStart_toEndOf="@+id/imageView_logo_app"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_left_per100"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_top_per100_login_screen"
            android:importantForAccessibility="no"
            android:src="@drawable/detail_logins_screen_left"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_logo_app"
            app:layout_constraintEnd_toStartOf="@+id/imageView_logo_app"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_username"
            android:layout_width="@dimen/edit_text_width_create_acc_screen"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_edit_text_160dp_100dp"
            android:background="@drawable/ic_background_field_userdata"
            android:fontFamily="@font/open_sans"
            android:hint="@string/text_hint_username"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:maxLength="24"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_minus_2"
            android:textSize="@dimen/text_size_texts_create_acc_screen"
            app:layout_constraintEnd_toEndOf="@+id/imageView_logo_app"
            app:layout_constraintStart_toStartOf="@+id/imageView_logo_app"
            app:layout_constraintTop_toBottomOf="@+id/imageView_logo_app" />

        <TextView
            android:id="@+id/textView_ic_username"
            style="@style/Opens_Sans_Regular_S_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="40dp"
            android:background="@color/white_minus_1"
            android:gravity="center"
            android:text="@string/text_user_name"
            android:textColor="@color/colorPrimary_plus_1"
            app:layout_constraintBottom_toBottomOf="@+id/editText_username"
            app:layout_constraintStart_toStartOf="@+id/editText_username" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/image_button_login"
            style="@style/Opens_Sans_Bold_H3_21"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_buttons"
            android:backgroundTint="@color/colorSecondary_default"
            android:contentDescription="@string/contentDescription_login_button"
            android:elevation="5dp"
            android:gravity="center"
            android:text="@string/text_register_word"
            android:textColor="@color/colorPrimary_plus_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_username"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:breakStrategy="high_quality"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:text="@string/text_thanks_for_your_download"
            android:textColor="@color/colorPrimary_plus_1"
            android:textSize="@dimen/text_size_texts_create_acc_screen"
            app:layout_constraintEnd_toEndOf="@+id/image_button_login"
            app:layout_constraintStart_toStartOf="@+id/image_button_login"
            app:layout_constraintTop_toBottomOf="@+id/image_button_login" />

        <View
            android:id="@+id/view16"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/marginTop_to_button"
            android:clickable="false"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/text_tos_phrase"
            android:textColor="@color/colorPrimary_plus_1"
            android:textSize="@dimen/text_size_tos_text_create_acc_screen"
            app:layout_constraintEnd_toEndOf="@+id/imageView_logo_app"
            app:layout_constraintStart_toStartOf="@+id/imageView_logo_app"
            app:layout_constraintTop_toBottomOf="@+id/imageView_logo_app" />

        <include
            android:id="@+id/progressbar_layout"
            layout="@layout/progressbar_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>